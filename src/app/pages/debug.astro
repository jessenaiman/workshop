---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get personal info from content collection
const personalEntries = await getCollection('personal');
const personalInfo = personalEntries[0];

// For debugging
console.log('Personal Info Data:', JSON.stringify(personalInfo, null, 2));
---

<Layout title="Debug Page">
  <div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Debug Info</h1>
    <pre class="bg-base-200 p-4 rounded-lg overflow-auto">
      {JSON.stringify(personalInfo, null, 2)}
    </pre>
  </div>
</Layout>
