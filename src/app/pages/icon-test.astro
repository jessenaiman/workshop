---
import { Icon } from 'astro-icon/components';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Icon Test">
  <div class="container mx-auto p-8">
    <h1 class="text-3xl font-bold mb-6">Icon Test Page</h1>
    
    <div class="grid grid-cols-2 gap-6">
      <div class="card bg-base-100 shadow-xl p-6">
        <h2 class="text-xl font-bold mb-4">MDI Icons</h2>
        <div class="flex flex-wrap gap-4">
          <div class="flex flex-col items-center">
            <Icon name="mdi:home" class="w-8 h-8" />
            <span class="text-sm mt-1">mdi:home</span>
          </div>
          <div class="flex flex-col items-center">
            <Icon name="mdi:account" class="w-8 h-8" />
            <span class="text-sm mt-1">mdi:account</span>
          </div>
          <div class="flex flex-col items-center">
            <Icon name="mdi:check-circle" class="w-8 h-8" />
            <span class="text-sm mt-1">mdi:check-circle</span>
          </div>
        </div>
      </div>
      
      <div class="card bg-base-100 shadow-xl p-6">
        <h2 class="text-xl font-bold mb-4">More MDI Icons</h2>
        <div class="flex flex-wrap gap-4">
          <div class="flex flex-col items-center">
            <Icon name="mdi:code-tags" class="w-8 h-8" />
            <span class="text-sm mt-1">mdi:code-tags</span>
          </div>
          <div class="flex flex-col items-center">
            <Icon name="mdi:chart-line" class="w-8 h-8" />
            <span class="text-sm mt-1">mdi:chart-line</span>
          </div>
          <div class="flex flex-col items-center">
            <Icon name="mdi:information-outline" class="w-8 h-8" />
            <span class="text-sm mt-1">mdi:information-outline</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
