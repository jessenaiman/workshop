---
import Layout from '../../layouts/Layout.astro';
import { getEntry, render } from 'astro:content';
import Feature from "../../components/Astro/Feature.astro";

// Get the AstroJS markdown content
const astroContent = await getEntry('info', 'astrojs-styleguide');

// Handle case where content doesn't exist
if (!astroContent) {
  throw new Error('AstroJS content not found. Please ensure src/content/info/astrojs-styleguide.mdx exists.');
}

// Render the content
const { Content } = await render(astroContent);

// Define features from the content
const features = [
  {
    title: "Unmatched Performance",
    content: "Astro's server-first approach means your website loads at lightning speed. Up to 40% faster than other frameworks."
  },
  {
    title: "Islands Architecture", 
    content: "Interactive components load independently on static pages, giving you the best of both worlds."
  },
  {
    title: "SEO Optimized",
    content: "Built for search engines with static HTML generation for better crawling and indexing."
  },
  {
    title: "Framework Agnostic",
    content: "Use with React, Vue, Svelte, or any UI library. Future-proof flexibility."
  }
];

---

<Layout title="AstroJS Showcase | Ultimate Astro Template">
  <main class="container mx-auto px-4 py-12 max-w-7xl">
    <!-- Hero Section -->
    <section class="text-center mb-20">
      <div class="flex justify-center mb-6">
        <div class="badge badge-primary badge-lg">
          Framework Showcase
        </div>
      </div>
      <h1 class="text-5xl md:text-6xl font-bold mb-6 text-primary">
        AstroJS
      </h1>
      <p class="text-xl text-base-content/80 max-w-3xl mx-auto mb-8">
        {astroContent.data.description}
      </p>
      <div class="flex justify-center gap-4">
        <a 
          href="https://astro.build/" 
          target="_blank" 
          rel="noopener noreferrer"
          class="btn btn-primary"
        >
          Visit Official Site
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
            <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
            <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
          </svg>
        </a>
        <button class="btn btn-outline">
          Learn More
        </button>
      </div>
    </section>

    <!-- Content Section -->
    <section class="prose prose-lg max-w-4xl mx-auto mb-20">
      <Content />
    </section>

    <!-- Features Grid -->
    <section class="grid md:grid-cols-2 gap-8 mb-20">
      {features.map((feature, index) => (
        <Feature 
          title={feature.title}
          description={feature.content}
          icon={index % 3 === 0 ? 'ðŸš€' : index % 3 === 1 ? 'âš¡' : 'ðŸ”'}
          delay={index * 100}
        />
      ))}
    </section>

    <!-- Code Example -->
    <section class="mb-20">
      <div class="flex flex-col sm:flex-row sm:items-center justify-between mb-6 gap-4">
        <h2 class="text-3xl font-bold">Example Component</h2>
        <div class="tabs tabs-boxed">
          <a class="tab tab-active">Astro</a>
          <a class="tab">React</a>
          <a class="tab">Vue</a>
        </div>
      </div>
      <div class="mockup-code">
        <pre data-prefix="1"><code>---</code></pre>
        <pre data-prefix="2"><code>import Layout from '../layouts/Layout.astro';</code></pre>
        <pre data-prefix="3"><code>import &#123; getCollection &#125; from 'astro:content';</code></pre>
        <pre data-prefix="4"><code>---</code></pre>
        <pre data-prefix="5"><code>&lt;Layout title="Welcome to Astro"&gt;</code></pre>
        <pre data-prefix="6"><code>  &lt;h1&gt;Welcome to Astro&lt;/h1&gt;</code></pre>
        <pre data-prefix="7"><code>&lt;/Layout&gt;</code></pre>
      </div>
    </section>

    <!-- Performance Demo -->
    <section class="mb-20">
      <h2 class="text-3xl font-bold mb-6">Performance Benefits</h2>
      <div class="stats stats-vertical lg:stats-horizontal shadow">
        <div class="stat">
          <div class="stat-title">Performance Boost</div>
          <div class="stat-value text-primary">40%</div>
          <div class="stat-desc">Faster than traditional React</div>
        </div>
        <div class="stat">
          <div class="stat-title">JavaScript Bundle</div>
          <div class="stat-value text-primary">0KB</div>
          <div class="stat-desc">JavaScript by default</div>
        </div>
        <div class="stat">
          <div class="stat-title">SEO Score</div>
          <div class="stat-value text-primary">A+</div>
          <div class="stat-desc">SEO & Accessibility</div>
        </div>
      </div>
    </section>



    <!-- Integration with Other Frameworks -->
    <section class="mb-20">
      <h2 class="text-3xl font-bold mb-6">Framework Integrations</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {['React', 'Vue', 'Svelte', 'Solid', 'Preact', 'Alpine', 'Lit', 'Qwik'].map(framework => (
          <div class="card bg-base-200 hover:bg-base-300 transition-colors cursor-pointer">
            <div class="card-body items-center text-center p-4">
              <div class="avatar placeholder">
                <div class="bg-neutral text-neutral-content rounded-full w-12">
                  <span class="text-xl">{framework.charAt(0)}</span>
                </div>
              </div>
              <h3 class="card-title text-sm">{framework}</h3>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Getting Started -->
    <section class="mb-20">
      <h2 class="text-3xl font-bold mb-8 text-center">Getting Started</h2>
      <div class="steps steps-vertical lg:steps-horizontal w-full">
        <div class="step step-primary">
          <div class="card bg-base-200">
            <div class="card-body">
              <h3 class="card-title">Install Astro</h3>
              <div class="mockup-code">
                <pre data-prefix="$"><code>npm create astro@latest</code></pre>
              </div>
            </div>
          </div>
        </div>
        <div class="step step-primary">
          <div class="card bg-base-200">
            <div class="card-body">
              <h3 class="card-title">Start Development</h3>
              <div class="mockup-code">
                <pre data-prefix="$"><code>npm run dev</code></pre>
              </div>
            </div>
          </div>
        </div>
        <div class="step">
          <div class="card bg-base-200">
            <div class="card-body">
              <h3 class="card-title">Build & Deploy</h3>
              <div class="mockup-code">
                <pre data-prefix="$"><code>npm run build</code></pre>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Interactive Demo -->
    <section class="mb-20">
      <h2 class="text-3xl font-bold mb-8 text-center">Interactive Demo</h2>
      <div class="mockup-browser bg-base-300 border">
        <div class="mockup-browser-toolbar">
          <div class="input">https://astro.build</div>
        </div>
        <div class="bg-base-200 flex justify-center px-4 py-16">
          <div class="text-center">
            <div class="loading loading-spinner loading-lg text-primary mb-4"></div>
            <p class="text-base-content/60">Interactive demo coming soon...</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="text-center py-16 bg-gradient-to-r from-primary/10 to-secondary/10 rounded-3xl">
      <h2 class="text-3xl font-bold mb-6">Ready to build something amazing?</h2>
      <p class="text-xl text-base-content/80 max-w-2xl mx-auto mb-8">
        Start building your next project with Astro today and experience the future of web development.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a 
          href="https://docs.astro.build/en/getting-started/" 
          target="_blank" 
          rel="noopener noreferrer"
          class="btn btn-primary btn-lg"
        >
          Get Started with Astro
        </a>
        <a 
          href="https://github.com/withastro/astro" 
          target="_blank" 
          rel="noopener noreferrer"
          class="btn btn-outline btn-lg"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/>
          </svg>
          View on GitHub
        </a>
      </div>
    </section>
  </main>
</Layout>
