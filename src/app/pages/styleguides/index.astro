---
// Styleguides index page - Introduction to all available styleguides
import BaseLayout from "../../layouts/Layout.astro";
// Import components from the UI directory
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '../../components/ui/card';
import { Button } from '../../components/ui/button';
import { Badge } from '../../components/ui/badge';
import { Rocket, Zap, Palette, Sparkles, Code2, LayoutGrid, ArrowRight } from "lucide-react";

// Page metadata
const title = 'Style Guides';
const description = 'Comprehensive guides for the design system and UI components used in this project';
const canonical = '/styleguides';

// Styleguide data
const styleguides = [
  {
    title: 'Astro',
    description: 'Learn how to build with Astro and its core concepts',
    icon: Rocket,
    href: '/styleguides/astrojs-styleguide',
    badge: 'Framework',
    badgeVariant: 'default' as const
  },
  {
    title: 'Tailwind CSS',
    description: 'Utility-first CSS framework for rapid UI development',
    icon: Zap,
    href: '/styleguides/tailwind-styleguide',
    badge: 'Styling',
    badgeVariant: 'secondary' as const
  },
  {
    title: 'shadcn/ui',
    description: 'Beautifully designed components built with Radix UI and Tailwind CSS',
    icon: Code2,
    href: '/styleguides/shadcn-styleguide',
    badge: 'Components',
    badgeVariant: 'default' as const
  },
  {
    title: 'Magic UI',
    description: 'Animated and interactive components for modern web experiences',
    icon: Sparkles,
    href: '/styleguides/magicui-styleguide',
    badge: 'Effects',
    badgeVariant: 'secondary' as const
  },
  {
    title: 'Design System',
    description: 'Colors, typography, and design tokens used throughout the project',
    icon: Palette,
    href: '/styleguides/design-system',
    badge: 'Design',
    badgeVariant: 'outline' as const
  },
  {
    title: 'Icons',
    description: 'Icon library and usage guidelines',
    icon: LayoutGrid,
    href: '/styleguides/icons',
    badge: 'Assets',
    badgeVariant: 'outline' as const
  }
];
---

<BaseLayout {title} {description} {canonical}>
  <div class="container max-w-6xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    {/* Hero Section */}
    <div class="text-center mb-16">
      <h1 class="text-4xl md:text-5xl font-bold tracking-tight bg-gradient-to-r from-primary to-primary/80 bg-clip-text text-transparent mb-4">
        Style Guides
      </h1>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
        Comprehensive guides for the design system and UI components used in this project.
      </p>
    </div>

    {/* Styleguides Grid */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {styleguides.map((guide) => (
        <Card key={guide.href} className="group relative overflow-hidden hover:shadow-lg transition-shadow duration-300">
          <CardHeader className="pb-2">
            <div class="flex items-center justify-between mb-4">
              <div class="p-2 rounded-lg bg-primary/10 text-primary">
                <guide.icon className="h-6 w-6" />
              </div>
              <Badge variant={guide.badgeVariant} className="ml-auto">
                {guide.badge}
              </Badge>
            </div>
            <CardTitle className="text-xl">{guide.title}</CardTitle>
            <CardDescription className="text-muted-foreground">
              {guide.description}
            </CardDescription>
          </CardHeader>
          <CardContent>
            <Button asChild variant="ghost" className="w-full justify-between group-hover:bg-accent/50 transition-colors">
              <a href={guide.href}>
                <span>View Guide</span>
                <ArrowRight className="h-4 w-4 ml-2 transition-transform group-hover:translate-x-1" />
              </a>
            </Button>
          </CardContent>
        </Card>
      ))}
    </div>

    {/* Getting Started Section */}
    <div class="mt-24 text-center">
      <h2 class="text-3xl font-bold tracking-tight mb-4">Getting Started</h2>
      <p class="text-muted-foreground max-w-2xl mx-auto mb-8">
        New to our design system? Start with the Astro guide to learn the fundamentals,
        then explore the component libraries and design tokens to build consistent UIs.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <Button asChild size="lg">
          <a href="/styleguides/astrojs-styleguide">
            <Rocket className="mr-2 h-4 w-4" />
            Start with Astro
          </a>
        </Button>
        <Button asChild variant="outline" size="lg">
          <a href="/styleguides/design-system">
            <Palette className="mr-2 h-4 w-4" />
            Design System
          </a>
        </Button>
      </div>
    </div>
  </div>
</BaseLayout>
